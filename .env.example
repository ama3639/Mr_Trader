# ===========================================
# MrTrader Bot Environment Variables Example
# ===========================================
# کپی این فایل به .env و مقادیر واقعی را وارد کنید

# Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
BOT_VERSION=1.0.0
BOT_NAME=MrTrader Bot
DEVELOPER_NAME=Your Name

# Environment
ENVIRONMENT=development
DEBUG=true
PRODUCTION=false

# Admin Configuration
ADMIN_USER_ID=YOUR_TELEGRAM_USER_ID
MANAGER_IDS=admin_id_1,admin_id_2

# Database Configuration
DATABASE_URL=sqlite:///data/mrtrader.db
DATABASE_PATH=data/mrtrader.db

# API Keys and External Services
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

COINGECKO_API_KEY=your_coingecko_api_key

ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Payment Gateway Configuration
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_api_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# Bank Account Information (for manual transfers)
BANK_ACCOUNT_NUMBER=your_bank_account_number
BANK_CARD_NUMBER=your_bank_card_number
BANK_CARD_NAME=your_bank_card_name

# Cryptocurrency Wallet Addresses
BITCOIN_WALLET_ADDRESS=your_bitcoin_wallet_address
ETHEREUM_WALLET_ADDRESS=your_ethereum_wallet_address
USDT_WALLET_ADDRESS=your_usdt_wallet_address

# Perfect Money Account
PERFECT_MONEY_ACCOUNT=U1234567

# Exchange Rates (for conversion)
BTC_USD_RATE=50000.0
ETH_USD_RATE=3000.0

# Security Configuration
SECRET_KEY=your_super_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Cache Configuration
CACHE_TTL_SECONDS=60
CACHE_MAX_SIZE=1000

# Signal Configuration
SIGNAL_CACHE_TTL=60
MAX_SIGNALS_PER_REQUEST=50
DEFAULT_TIMEFRAME=1h

# Package Configuration
FREE_TRIAL_DAYS=7
WELCOME_BONUS=100
REFERRAL_BONUS_PERCENTAGE=10

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_CHANNELS=telegram,email

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,txt

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true

# External URLs
WEBSITE_URL=https://your-website.com
SUPPORT_USERNAME=your_support_username
API_BASE_URL=https://api.your-domain.com

# Development Settings
TESTING=false
MOCK_EXTERNAL_APIS=false
SIMULATE_PAYMENTS=false

# Timezone
DEFAULT_TIMEZONE=Asia/Tehran
SERVER_TIMEZONE=UTC

# Language Settings
DEFAULT_LANGUAGE=fa
SUPPORTED_LANGUAGES=fa,en

# Feature Flags
ENABLE_REFERRAL_SYSTEM=true
ENABLE_PAYMENT_SYSTEM=true
ENABLE_ADMIN_PANEL=true
ENABLE_BACKUP_SYSTEM=true
ENABLE_ANALYTICS=true

# Social Media
TELEGRAM_CHANNEL=@your_channel
TWITTER_HANDLE=@your_twitter
INSTAGRAM_HANDLE=@your_instagram

# Contact Information
SUPPORT_EMAIL=support@your-domain.com
BUSINESS_EMAIL=business@your-domain.com
TECHNICAL_EMAIL=tech@your-domain.com

# Legal
TERMS_OF_SERVICE_URL=https://your-website.com/terms
PRIVACY_POLICY_URL=https://your-website.com/privacy

# ===========================================
# IMPORTANT NOTES:
# 1. این فایل نمونه است - هرگز آن را با مقادیر واقعی commit نکنید
# 2. فایل .env حاوی اطلاعات حساس است و باید در .gitignore باشد
# 3. همیشه از رمزهای قوی استفاده کنید
# 4. کلیدهای API را به صورت دوره‌ای تغییر دهید
# ===========================================